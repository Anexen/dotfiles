# default values are in /etc/dunst/dunstrc
# IMPORTANT: colors have to be defined in quotation marks.
# Otherwise the "#" and following would be interpreted as a comment.

[global]
frame_width = 0
padding = 16
horizontal_padding = 16
width = 300
height = (0,300)
origin = top-right
offset = (30,50)
frame_color = "#222222"

font = SF Pro Display 10
icon_path = /usr/share/icons/Papirus-Dark/16x16/status/:/usr/share/icons/Papirus-Dark/16x16/devices/

dmenu = /usr/bin/rofi -dmenu

mouse_left_click = close_current
mouse_right_click = open_url,close_current
mouse_middle_click = context

[urgency_low]
background = "#222222"
foreground = "#ffffff"
timeout = 10
# Icon for notifications with low urgency, uncomment to enable
#icon = /path/to/icon

[urgency_normal]
background = "#15161b"
foreground = "#ffffff"
timeout = 10

[urgency_critical]
background = "#900000"
foreground = "#ffffff"
frame_color = "#ff0000"
timeout = 0

[remind]
category = reminder
urgency = normal
# background = "#333333"
# foreground = "#ff7f7f"
